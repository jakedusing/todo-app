<%- include("partials/header"); %>

<main class="container mt-5">
  <h1>My Groups</h1>
  <div class="mb-4">
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#createGroupModal"
    >
      Create New Group
    </button>
  </div>
  <ul class="list-group">
    <% groups.forEach(group => { %>
    <li
      class="list-group-item d-flex justify-content-between align-items-center"
    >
      <span><strong><%= group.name %></strong></span>
      <div>
        <a href="/groups/<%= group._id %>" class="btn btn-sm btn-outline-info"
          >View</a
        >
        <a
          href="/groups/<%= group._id %>/manage"
          class="btn btn-sm btn-outline-warning"
          >Manage</a
        >
      </div>
    </li>
    <% }); %>
  </ul>
</main>

<!-- Modal for Creating a new Group -->
<div
  class="modal fade"
  id="createGroupModal"
  tabindex="-1"
  aria-labelledby="createGroupModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form action="/groups/create" method="POST" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createGroupModalLabel">Create New Group</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="groupName" class="form-label">Group Name</label>
          <input
            type="text"
            class="form-control"
            id="groupName"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="groupMembers" class="form-label">Select Members</label>
          <select
            id="groupMembers"
            name="members"
            class="form-control"
            multiple
            required
          >
            <% friends.forEach(friend => { %>
            <option value="<%= friend._id %>"><%= friend.username %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary">Create Group</button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer"); %>
